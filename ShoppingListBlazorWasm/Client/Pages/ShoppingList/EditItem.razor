@page "/shoppinglist/edititem/{ShoppingListItemName}"

@using ShoppingListBlazorWasm.Shared
@inject HttpClient Http

<h3>Edit Shpping Item</h3>

<EditForm Model="shoppingListItem" OnValidSubmit="@EditShoppingItem">
    <DataAnnotationsValidator />

    <div class="form-group">
        <label class="control-label col-md-2">Item</label>
        <div class="col-md-3">
            <InputText class="form-control" @bind-Value="shoppingListItem.Name" />
            <ValidationMessage For="(() => shoppingListItem.Name)" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Price</label>
        <div class="col-md-3">
            <InputNumber class="form-control" @bind-Value="shoppingListItem.Price" />
            <ValidationMessage For="(() => shoppingListItem.Price)" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Qty</label>
        <div class="col-md-3">
            <InputNumber class="form-control" @bind-Value="shoppingListItem.Quantity" />
            <ValidationMessage For="(() => shoppingListItem.Quantity)" />
        </div>
    </div>

    <button type="submit">Submit</button>
</EditForm>

<div class="form-actions no-color esh-link-list">
    <a href="@($"/shoppinglist/displayitem/{shoppingListItem.Name}")" class="esh-link-item">
        Display Item
    </a>
    |
    <a href="/shoppinglist/displaylist" class="esh-link-item">
        Back to Overview
    </a>
</div>

@code {
    [Parameter]
    public string ShoppingListItemName { get; set; }

    protected ShoppingListItem shoppingListItem = new ShoppingListItem();

    protected override async Task OnInitializedAsync()
    {
        var shoppingListItems = await Http.GetFromJsonAsync<List<ShoppingListItem>>("ShoppingListItem");
        shoppingListItem = shoppingListItems.Where(x => x.Name == ShoppingListItemName).FirstOrDefault();
    }

    private async void EditShoppingItem()
    {
        if (shoppingListItem != null)
        {
            var response = await Http.PutAsJsonAsync("ShoppingListItem", shoppingListItem);
        }
    }
}
